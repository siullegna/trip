<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="InputTextViewAttrs">
        <attr name="hint" format="string" />        <!-- This is the top hint -->
        <attr name="mainHint" format="string" />    <!-- This is the main hint -->
        <attr name="colorInputError" format="color" />
        <attr name="colorInputNormal" format="color" />
        <attr name="inputType" format="enum">
            <enum name="text" value="0" />
            <enum name="date" value="1" />
            <enum name="number" value="2" />
        </attr>
    </declare-styleable>

</resources>