<resources>

    <style name="errorHeaderStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/error_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="errorSubHeaderStyle">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/error_sub_header_text_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="inputTextStyle">
        <item name="colorInputError">@color/colorDividerError</item>
        <item name="colorInputNormal">@color/colorDivider</item>
    </style>

</resources>
