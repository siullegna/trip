<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.hap.trip.ui.SplashActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/splash_icon"
        android:layout_width="@dimen/splash_icon_size"
        android:layout_height="@dimen/splash_icon_size"
        android:layout_marginBottom="@dimen/splash_icon_margin"
        app:srcCompat="@drawable/ic_travel_bag" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/splash_message_text_size" />

</LinearLayout>
